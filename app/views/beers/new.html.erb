<h1>New beer</h1>


<%= form_for(@beer) do |f| %>
    Beer name: <%= f.text_field :name %>    <br/>
    <%= f.label :brewery %> <%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :name) %></br>
    <%= f.label :style %> <%= f.select :style_id, options_from_collection_for_select(@styles, :id, :style )%><br/>

    <%= f.submit %>

    <%end%>

<%= link_to 'Back', beers_path %>
