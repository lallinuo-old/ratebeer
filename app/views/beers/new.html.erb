<h1>New beer</h1>


<%= form_for(@beer) do |f| %>
    Beer name: <%= f.text_field :name %>    <br/>
    Brewery: <%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :name) %></br>
    Style: <%= f.select :style_id, options_from_collection_for_select(@styles, :id, :style )%><br/>

    <%= f.submit %>

    <%end%>

<%= link_to 'Back', beers_path %>
